backend/server.py:
___________________________________________________________________________________________________________________________________________________________________________________

from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
from pydantic import BaseModel
from openai import OpenAI

app = FastAPI()

app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_methods=["*"],
    allow_headers=["*"]
)

client = OpenAI(api_key="YOUR_OPENAI_API_KEY")

class ChatRequest(BaseModel):
    message: str
    mode: str

def build_prompt(message, mode):
    prompts = {
        "teacher": f"""
Role: You are a patient teacher.
Task: Explain the topic clearly.
Context: Student is learning for exams.
Reasoning: Explain step-by-step with simple examples.
Output: Simple explanation.
Stop: Keep it short and clear.

Topic: {message}
""",
        "quiz": f"""
Role: You are an exam trainer.
Task: Create a short quiz.
Context: Student wants practice questions.
Reasoning: Ask questions first, then answers.
Output: 5 MCQs.
Stop: No extra explanation.

Topic: {message}
""",
        "summary": f"""
Role: You are a note-making assistant.
Task: Summarize the topic.
Context: Student wants quick revision.
Reasoning: Identify key points.
Output: Bullet-point summary.
Stop: Max 10 bullets.

Topic: {message}
"""
    }
    return prompts.get(mode, message)

@app.post("/chat")
def chat(req: ChatRequest):
    prompt = build_prompt(req.message, req.mode)

    response = client.chat.completions.create(
        model="gpt-4o-mini",
        messages=[{"role": "user", "content": prompt}]
    )

    return {"reply": response.choices[0].message.content
