from openai import OpenAI

client = OpenAI(api_key="YOUR_API_KEY")

conversation = [
    {"role": "system", "content": "You are a friendly helpful AI assistant. Respond with short, clear answers and use emojis when possible."}
]

print("\nðŸ¤– Memory Chatbot Ready! Type 'exit' to stop.\n")

while True:
    user = input("You: ")

    if user.lower() in ['exit', 'quit', 'bye']:
        print("Bot: It was great chatting! Bye ðŸ‘‹")
        break

    conversation.append({"role": "user", "content": user})

    response = client.chat.completions.create(
        model="gpt-4o-mini",
        messages=conversation
    )

    bot_reply = response.choices[0].message.content
    print("Bot:", bot_reply, "\n")

    conversation.append({"role": "assistant", "content": bot_reply})

    # Save conversation
    with open("chat_history_day3.txt", "a", encoding="utf-8") as file:
        file.write(f"You: {user}\nBot: {bot_reply}\n\n")
